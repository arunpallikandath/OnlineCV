@{
    ViewBag.Title = "Contact";
    //Layout Set to null, it is a partial view
    Layout = null;
}
<!-- This page uses angularjs to load its contents 
     Please note, its form is on _layout.cshtml
-->
<div style="margin-top:60px;">

    <div class="row">
        <div class="col-md-2 col-xs-1 cvTitle">
            CONTACT
            <hr style="height:4px;width:35%;background-color:black;margin-left:0px;margin-bottom:25px">
        </div>
    </div>
    <div id="msgPanel" class="row" style="height:40px; font-weight:bold" hidden>
        <div class="col-md-9 cvDesc">
            <div id="messages">@ViewBag.Message</div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-8 col-sm-12">
            <div class="row">
                <div class="col-md-2 col-xs-12">
                    <label class="control-label">Full name</label>
                </div>
                <div class="col-md-8 col-xs-12">
                    <input type="text" class="form-control" name="fullName" id="fullName" required minlength="5" maxlength="150"/>
                </div>
            </div>
            </br>
            <div class="row">
                <div class="col-md-2 col-xs-12">
                    <label class="control-label">Email</label>
                </div>
                <div class="col-md-8 col-xs-12">
                    <input type="email"class="form-control" name="email" required />
                </div>
            </div>
            </br>
            <!-- Commented, since the requirement specifically mentioned about the fields.
            <div class="row">
                <div class="col-md-2 col-xs-12">
                    <label class="control-label">Phone</label>
                </div>
                <div class="col-md-8 col-xs-12">
                    <input type="tel" class="form-control" name="phone" required/>
                </div>
            </div>
            </br>
            <div class="row">
                <div class="col-md-2 col-xs-12">
                    <label class="control-label">Subject</label>
                </div>
                <div class="col-md-8 col-xs-12">
                    <input type="text" class="form-control" name="subject" required maxlength="50"/>
                </div>
            </div>
            </br>
             -->
            <div class="row">
                <div class="col-md-2 col-xs-12">
                    <label class="control-label">Comments</label>
                </div>
                <div class="col-md-8 col-xs-12">
                    <textarea class="form-control" name="comments" rows="5"></textarea>
                    <br />
                    <button id="btnSendContact" type="submit" class="btn btn-default cvButton">SUBMIT</button>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-xs-12" style="border-left:1px solid">
            <div class="cvSubTitle">Reach me :</div>
            {{mycv.email}}
            </br>
            {{mycv.phone}}

        </div>
    </div>    
</div>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OnlineCV</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#d2364f">
        <div class="container">
            <div class="row">         
                <div class="col-md-5 hidden-sm col-xs-12 col-lg-offset-1">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <div class="navbar-brand form-inline">
                          Administration - OnlineCV
                        </div>
                    </div>
                </div>
                <div class="col-md-1">
                </div>
            </div>
        </div>
    </div>
    <div class="tab-content">
        <div id="home" class="tab-pane fade in active">
            <div class="container body-content">
                @RenderBody()
            </div>
        </div>
        
        <div class="footer">
            <div class="footer-content">
                &copy; 2015 Arun Kumar Narayanan. All rights reserved.
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/respond")
    <!-- Reference to cdnjs, since the requirement requires -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.5/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/controllers")

</body>

</html>

@{
    ViewBag.Title = "Home Page";

}
<div style="margin-top:60px;">
    <div >
        <div class="row">
            <div class="col-md-2 col-xs-1 cvTitle">
                {{mycv.title}}
                <hr style="height:4px;width:50%;background-color:black;margin-left:0px;">
            </div>
        </div>
        <div class="row">

            <div class="col-md-6 col-sm-12 cvDesc">

                {{mycv.description}}

                <div style="margin-top:10px">
                    <a class="btn btn-info" href="~/Content/aruncv.pdf">Download CV</a>
                </div>
            </div>
            <div class="col-md-5 col-sm-12">
                    <div class="cvSubTitle">KEY EXPERTISE
                        <hr style="height:4px;width:10%;background-color:black;margin-left:0px; margin-top:10px;margin-bottom:10px">
                    </div>
                    
                    <ul class="cvKeyPoints">
                        <li class="cvKeyPoints text-uppercase" ng-repeat="keyArea in mycv.keyexpertise">
                            <a href="#">{{keyArea}}</a>
                        </li>
                    </ul>
            </div>
            <div class="col-md-1 hidden-sm"></div>

        </div>
    </div>
</div>

